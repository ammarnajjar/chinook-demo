{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2019",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./",
    "lib": ["es2020"],
    "skipLibCheck": true,
    "incremental": true
  },
  "exclude": ["node_modules", "dist"]
}
